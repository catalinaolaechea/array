#include <iostream>

using namespace std;

int main()
{
    int temp [7];
    cout<<"ingrese la temperatura del lunes"<<endl;
    cin>>temp[0];
    cout<<"ingrese la temperatura del martes"<<endl;
    cin>>temp[1];
    cout<<"ingrese la temperatura del miercoles"<<endl;
    cin>>temp[2];
    cout<<"ingrese la temperatura del jueves"<<endl;
    cin>>temp[3];
    cout<<"ingrese la temperatura del viernes"<<endl;
    cin>>temp[4];
    cout<<"ingrese la temperatura del sabado"<<endl;
    cin>>temp[5];
    cout<<"ingrese la temperatura del domingo"<<endl;
    cin>>temp[6];
    cout<<"las temperaturas ingresadas en orden lunes a domingo son"<<endl;
    for (int i=0;i<7;i++)
    {
        cout<<temp[i]<<endl;
    }
    return 0;
}
